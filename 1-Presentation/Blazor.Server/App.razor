@inject IHostEnvironment Env
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link href="iconfont/iconfont.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="css/animate.min.css" rel="stylesheet" />
    <link href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet" />
    <link href="quill/quill.snow.css" rel="stylesheet" />
    <link href="quill/quill.bubble.css" rel="stylesheet" />

    <link rel="icon" type="image/png" href="favicon.ico" />
    <link href="Blazor.Server.styles.css" rel="stylesheet" />
    <HeadOutlet @rendermode="InteractiveServer" />
</head>
<body>
    <div id="check_ie_msg" style="display: none; text-align: center; position: absolute;z-index:9999; width:80%;left:10%; top: 20px; background-color:papayawhip;border:solid 1px #ff6a00">
    </div>
    <Routes @rendermode="InteractiveServer" />
    <div id="blazor-error-ui">
        @if (Env.IsDevelopment())
        {
            <text>
                服务器端口或系统错误，请刷新页面重试。
            </text>
        }
        else
        {
            <text>
                服务器端口或系统错误. 按键盘F12打开开发者工具查看详情。
            </text>
        }
        <a href="" class="reload">重新加载</a>
        <a class="dismiss">🗙</a>
    </div>
    <script>
        if (!!window["ActiveXObject"] || "ActiveXObject" in window) {
            var ie_msg = document.getElementById("check_ie_msg");
            ie_msg.innerHTML = "<h2>本站不支持IE浏览器，请使用 edge,Chrome,Firefox,Safari 等浏览器浏览。 </h2>";
            ie_msg.style.display = "block";
        }
    </script>

    <!-- 不显示重连提示（覆盖Blazor） -->
    <div id="components-reconnect-modal" style="display: none;z-index:9999;background-color:#00ff00; width:180px; height:180px;position:fixed;top:20%;right:45%;"></div>
    <!-- hiprint -->
    <link href="hiprint/css/hiprint.css" rel="stylesheet">
    <link href="hiprint/css/print-lock.css" rel="stylesheet">
    <link href="hiprint/css/print-lock.css" media="print" rel="stylesheet">
    <!-- jQuery (hiprint 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="hiprint/plugins/jquery-3.7.1.min.js"></script>
    <!-- hiprint 核心js-->
    <script src="hiprint/hiprint.bundle.js"></script>
    <!-- 调用浏览器打印窗口helper类-->
    <script src="hiprint/plugins/jquery.hiwprint.js"></script>
    <!-- 二维码生成组件-->
    <script src="hiprint/plugins/qrcode.js"></script>

    <script src="_content/AntDesign/js/ant-design-blazor.js" autostart="false"></script>
    <script src="_content/AntDesign.Charts/ant-design-charts-blazor.js" autostart="false"></script>
    <script src="js/download.js"></script>
    <script src="js/common_fun.js"></script>
    <script src="webcam/webcam.js"></script>
    <script src="webcam/Configuration.js"></script>

    <!-- 可视化编辑器quill-->
    <script src="quill/quill.js" type="text/javascript"></script>
    <script src="_content/Blazored.TextEditor/quill-blot-formatter.min.js" type="text/javascript"></script>
    <script src="_content/Blazored.TextEditor/Blazored-BlazorQuill.js" type="text/javascript"></script>

    <!-- 后端获取：var remoteUserAgent = await JSRuntime.InvokeAsync<string>("getUserAgent");-->
    <script>
        window.getUserAgent = () => {
            return navigator.userAgent;
        };
    </script>

    <script src="_framework/blazor.web.js" autostart="true"></script>
</body>
</html>
